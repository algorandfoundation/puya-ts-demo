{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.mts"],
  "exclude": [
    "contracts/**/*.tealscript.ts",
    "contracts/calculator/*.algo.ts",
    "contracts/kitchen-sink/*.algo.ts",
    "contracts/simple/*.algo.ts"
  ]
}
