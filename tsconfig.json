{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2023",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["**/*.ts", "**/*.mts" ],
  "exclude": ["tealscript_contracts/*"],
}
